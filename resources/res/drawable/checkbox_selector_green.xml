<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/buttonRadius"/>
                    <size android:height="@dimen/buttonSize" android:width="@dimen/buttonSize"/>
                    <solid android:color="@color/buttonGreen"/>
                </shape>
            </item>
            <item android:drawable="@drawable/ic_check_white_48dp"/>
        </layer-list>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/buttonRadius"/>
            <size android:height="@dimen/buttonSize" android:width="@dimen/buttonSize"/>
            <solid/>
            <stroke android:width="@dimen/buttonBorder" android:color="@color/buttonGreen"/>
            <padding android:left="@dimen/buttonPadding" android:top="@dimen/buttonPadding" android:right="@dimen/buttonPadding" android:bottom="@dimen/buttonPadding"/>
        </shape>
    </item>
</selector>

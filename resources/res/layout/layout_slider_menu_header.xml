<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/header_main_layout" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:padding="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.mobiroller.views.CircleImageView android:id="@+id/header_user_image" android:layout_width="60dp" android:layout_height="60dp" app:civ_border_color="@color/white" app:civ_border_width="2dp" app:srcCompat="@drawable/ic_account_circle_black_36dp"/>
        <RelativeLayout android:orientation="horizontal" android:paddingTop="5dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp">
            <LinearLayout android:orientation="vertical" android:id="@+id/header_user_info_layout" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textSize="?attr/font_14" android:textStyle="bold" android:textColor="#ffffff" android:id="@+id/header_user_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="John Doe"/>
                <TextView android:textSize="?attr/font_14" android:textColor="#ffffff" android:id="@+id/header_user_email" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="johndoe@gmail.com"/>
            </LinearLayout>
            <ImageView android:id="@+id/header_login_icon" android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/ic_login_white_24dp" android:layout_centerVertical="true" android:layout_marginEnd="10dp" android:layout_alignParentEnd="true"/>
            <ImageView android:id="@+id/header_drop_down" android:layout_width="30dp" android:layout_height="30dp" android:layout_centerVertical="true" android:layout_alignParentEnd="true" app:srcCompat="@drawable/ic_arrow_drop_down_white_24dp"/>
        </RelativeLayout>
    </LinearLayout>
    <ImageView android:id="@+id/user_divider_view" android:background="@color/white" android:layout_width="match_parent" android:layout_height="1dp"/>
</LinearLayout>

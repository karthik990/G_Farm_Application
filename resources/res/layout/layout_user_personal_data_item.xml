<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:padding="3dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:gravity="center_vertical" android:id="@+id/info_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingEnd="16dp">
        <TextView android:textSize="?attr/font_17" android:textColor="@color/black" android:id="@+id/title" android:paddingBottom="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView android:textSize="?attr/font_16" android:textColor="#a6a6a6" android:id="@+id/value" android:paddingBottom="3dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/title" android:textIsSelectable="true"/>
    </RelativeLayout>
    <View android:id="@+id/divider" android:background="#ccc" android:layout_width="match_parent" android:layout_height="1dp" android:layout_below="@+id/info_layout"/>
</RelativeLayout>

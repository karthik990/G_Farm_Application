<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center" android:layout_gravity="center" android:id="@+id/mainLayout" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView android:id="@+id/image" android:background="#ffffff" android:layout_width="200dp" android:layout_height="wrap_content" android:adjustViewBounds="true"/>
    <RelativeLayout android:background="#8f000000" android:padding="4dp" android:layout_width="200dp" android:layout_height="wrap_content">
        <TextView android:textColor="@color/white" android:id="@+id/userName" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </RelativeLayout>
    <ImageView android:id="@+id/badgeImage" android:visibility="gone" android:layout_width="45dp" android:layout_height="45dp" android:layout_alignTop="@+id/image" android:layout_alignRight="@+id/image" android:layout_alignEnd="@+id/image"/>
    <View android:id="@+id/divider" android:layout_width="200dp" android:layout_height="1dp" android:layout_below="@+id/image"/>
    <LinearLayout android:orientation="horizontal" android:background="@color/white" android:padding="3dp" android:layout_width="200dp" android:layout_height="40dp" android:layout_below="@+id/divider">
        <ImageView android:id="@+id/text_user" android:padding="4dp" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" app:srcCompat="@drawable/ic_messaging"/>
        <ImageView android:id="@+id/user_profile" android:padding="4dp" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" app:srcCompat="@drawable/ic_person_white_24dp"/>
    </LinearLayout>
</RelativeLayout>

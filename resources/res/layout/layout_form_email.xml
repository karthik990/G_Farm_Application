            <TextView android:textSize="?attr/font_14" android:id="@+id/form_item_email" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <View android:layout_width="match_parent" android:layout_height="1dp" android:layout_weight="7"/>
        <View android:orientation="vertical" android:background="#d5d5d6" android:layout_width="match_parent" android:layout_height="1dp" android:layout_weight="1" android:layout_marginStart="20dp"/>
    </LinearLayout>
</LinearLayout>

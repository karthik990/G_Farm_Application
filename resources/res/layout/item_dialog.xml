<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/dialogRootLayout" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/dialogContainer" android:background="?attr/selectableItemBackground" android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.stfalcon.chatkit.utils.ShapeImageView android:id="@+id/dialogAvatar" android:layout_width="@dimen/dialog_avatar_width" android:layout_height="@dimen/dialog_avatar_height" android:layout_margin="16dp"/>
        <TextView android:ellipsize="end" android:id="@+id/dialogName" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="19dp" android:layout_marginRight="16dp" android:maxLines="1" android:includeFontPadding="false" android:layout_toLeftOf="@+id/dialogDate" android:layout_toRightOf="@+id/dialogAvatar" android:fontFamily="@string/font_fontFamily_medium" android:layout_marginEnd="16dp" android:layout_toStartOf="@+id/dialogDate" android:layout_toEndOf="@+id/dialogAvatar"/>
        <TextView android:ellipsize="end" android:id="@+id/dialogDate" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_marginRight="16dp" android:maxLines="1" android:layout_alignParentRight="true" android:layout_marginEnd="16dp" android:layout_alignParentEnd="true"/>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="7dp" android:layout_marginRight="16dp" android:layout_toRightOf="@+id/dialogAvatar" android:layout_below="@+id/dialogName" android:layout_marginEnd="16dp" android:layout_toEndOf="@+id/dialogAvatar">
            <com.stfalcon.chatkit.utils.ShapeImageView android:id="@+id/dialogLastMessageUserAvatar" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginRight="7dp" android:layout_marginEnd="7dp"/>
            <TextView android:ellipsize="end" android:gravity="top" android:id="@+id/dialogLastMessage" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="1" android:layout_toRightOf="@+id/dialogLastMessageUserAvatar" android:layout_centerVertical="true" android:layout_toEndOf="@+id/dialogLastMessageUserAvatar"/>
        </RelativeLayout>
        <TextView android:ellipsize="end" android:gravity="center" android:id="@+id/dialogUnreadBubble" android:background="@drawable/bubble_circle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="-5dp" android:layout_marginRight="-5dp" android:lines="1" android:layout_alignTop="@+id/dialogAvatar" android:layout_alignRight="@+id/dialogAvatar" android:fontFamily="@string/font_fontFamily_medium" android:layout_marginEnd="-5dp" android:layout_alignEnd="@+id/dialogAvatar"/>
        <FrameLayout android:id="@+id/dialogDividerContainer" android:paddingLeft="@dimen/dialog_divider_margin_left" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_alignParentBottom="true" android:paddingStart="@dimen/dialog_divider_margin_left">
            <View android:id="@+id/dialogDivider" android:background="@color/dialog_divider" android:layout_width="match_parent" android:layout_height="1dp"/>
        </FrameLayout>
    </RelativeLayout>
</FrameLayout>

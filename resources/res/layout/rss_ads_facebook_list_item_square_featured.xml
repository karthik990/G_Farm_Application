<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="horizontal" android:id="@+id/main_layout" android:layout_width="match_parent" android:layout_height="@dimen/youtube_type_ads_main_square_height">
    <RelativeLayout android:background="@color/gray" android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageView android:id="@+id/ivImage" android:background="@color/black" android:layout_width="match_parent" android:layout_height="@dimen/youtube_type_ads_main_square_image_height" android:scaleType="centerCrop"/>
        <RelativeLayout android:orientation="vertical" android:background="@drawable/list_native_ad_title_background" android:layout_width="match_parent" android:layout_height="@dimen/youtube_type_ads_main_square_header_height" android:layout_alignParentBottom="true" android:paddingStart="13.3dp" android:paddingEnd="13.3dp">
            <TextView android:textSize="11.3sp" android:textStyle="bold" android:textColor="@color/white" android:ellipsize="end" android:gravity="center" android:id="@+id/tvHeader" android:layout_width="match_parent" android:layout_height="@dimen/youtube_type_ads_main_square_title_height" android:maxLines="2" android:layout_above="@+id/tvDescription"/>
            <TextView android:textSize="10sp" android:textColor="@color/black" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/tvDescription" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="2" android:layout_above="@+id/btnAction"/>
            <Button android:textSize="9.3sp" android:textColor="#0d0909" android:ellipsize="end" android:id="@+id/btnAction" android:background="@drawable/ad_action_button" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/youtube_type_ads_main_full_button_height" android:maxLines="1" android:layout_alignParentBottom="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout android:orientation="horizontal" android:id="@+id/ad_choices_container" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:layout_marginStart="2dp"/>
    <ImageView android:id="@+id/ivLogo" android:background="@color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <RelativeLayout android:gravity="center" android:id="@+id/empty_image_view" android:background="#e5e3e5" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:gravity="center" android:background="@drawable/ad_placeholder_background" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="12sp" android:textColor="@color/white" android:padding="1dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/ad" android:layout_marginStart="3dp" android:layout_marginEnd="3dp"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>

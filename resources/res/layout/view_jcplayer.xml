    <ImageButton android:id="@+id/btn_prev" android:background="@color/transparent" android:layout_width="@dimen/touch_default" android:layout_height="@dimen/touch_default" android:layout_marginLeft="16dp" android:layout_marginBottom="5dp" android:src="@drawable/ic_skip_previous_white_48dp" android:layout_below="@+id/linearLayout" android:layout_alignParentLeft="true" android:soundEffectsEnabled="false" android:layout_marginStart="16dp" android:layout_alignParentStart="true"/>
</RelativeLayout>

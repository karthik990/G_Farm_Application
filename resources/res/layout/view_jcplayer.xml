        <TextView android:textSize="@dimen/text_size" android:textColor="@android:color/white" android:gravity="center_vertical" android:layout_gravity="center" android:id="@+id/txt_current_duration" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="00:00" android:textAlignment="center"/>

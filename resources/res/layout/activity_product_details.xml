<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:id="@+id/scroll_view" android:layout_width="match_parent" android:layout_height="0dp" app:layout_constraintBottom_toTopOf="@+id/buy_button" app:layout_constraintTop_toTopOf="0">
        <androidx.constraintlayout.widget.ConstraintLayout android:background="#ffffff" android:layout_width="match_parent" android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/image_layout" android:layout_width="match_parent" android:layout_height="0dp" app:layout_constraintDimensionRatio="1:1" app:layout_constraintTop_toTopOf="0">
                <androidx.viewpager.widget.ViewPager android:id="@+id/image_view_pager" android:visibility="visible" android:layout_width="match_parent" android:layout_height="0dp" app:layout_constraintDimensionRatio="1:1" app:layout_constraintTop_toTopOf="0"/>
                <ImageView android:id="@+id/image_view" android:background="@color/white" android:layout_width="match_parent" android:layout_height="0dp" android:src="@drawable/no_image" app:layout_constraintDimensionRatio="1:1" app:layout_constraintTop_toTopOf="0"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/actions_layout" android:layout_width="match_parent" android:layout_height="30dp" app:layout_constraintBottom_toBottomOf="@+id/image_layout">
                <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/view_pager_count_dots" android:background="@drawable/e_commerce_product_detail_indicator_background" android:paddingTop="4dp" android:paddingBottom="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingStart="5dp" android:paddingEnd="5dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/top_container" android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_constraintTop_toBottomOf="@+id/image_layout">
                <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/info_layout" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="16dp" android:layout_marginRight="16dp">
                    <com.mobiroller.views.custom.MobirollerBadgeView android:id="@+id/sold_out_badge" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginEnd="8dp" app:backgroundColor="#f8e7d8" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0" app:text="@string/e_commerce_product_detail_sold_out_badge" app:textColor="#000000"/>
                    <com.mobiroller.views.custom.MobirollerBadgeView android:id="@+id/free_shipping_badge" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="10dp" app:backgroundColor="#000000" app:layout_constraintStart_toEndOf="@+id/sold_out_badge" app:layout_constraintTop_toTopOf="0" app:text="@string/e_commerce_list_free_shipping_badge" app:textColor="#ffffff"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/title_layout" android:background="@color/white" android:paddingTop="14dp" android:paddingBottom="14dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="16dp" android:paddingEnd="16dp">
                    <com.mobiroller.views.custom.MobirollerTextView android:id="@+id/title" android:layout_width="0dp" android:layout_height="wrap_content" android:maxLines="2" android:includeFontPadding="false" app:colorType="7" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0" app:sizeType="0"/>
                    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="14dp" app:layout_constraintTop_toBottomOf="@+id/title">
                        <androidx.cardview.widget.CardView android:layout_gravity="center" android:id="@+id/sale_badge" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginEnd="16dp" app:cardBackgroundColor="#f5d8d8" app:cardCornerRadius="6dp" app:cardElevation="0dp" app:layout_constraintStart_toStartOf="0">
                            <com.mobiroller.views.custom.MobirollerTextView android:textColor="#ff0000" android:id="@+id/sale_rate_text_view" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="9dp" android:includeFontPadding="false" android:maxLength="3" app:sizeType="3"/>
                        </androidx.cardview.widget.CardView>
                        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
                            <com.mobiroller.views.custom.MobirollerTextView android:gravity="center_horizontal" android:id="@+id/discounted_price" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:includeFontPadding="false" app:colorType="4" app:sizeType="4"/>
                            <com.mobiroller.views.custom.MobirollerTextView android:gravity="center_horizontal" android:id="@+id/price" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="2dp" android:includeFontPadding="false" app:colorType="7" app:sizeType="1"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.cardview.widget.CardView android:id="@+id/cargo_layout" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="16dp" android:layout_marginStart="16dp" app:cardBackgroundColor="#f8e7d8" app:cardCornerRadius="6dp" app:cardElevation="0dp">
                    <LinearLayout android:orientation="horizontal" android:paddingTop="6dp" android:paddingBottom="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingStart="10dp" android:paddingEnd="10dp">
                        <ImageView android:layout_width="16dp" android:layout_height="16dp" android:tint="#ffc28c" app:srcCompat="@drawable/ic_local_shipping_white_24dp"/>
                        <com.mobiroller.views.custom.MobirollerTextView android:gravity="center" android:layout_gravity="center" android:id="@+id/cargo_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:includeFontPadding="false" android:layout_marginStart="10dp" app:colorType="9" app:sizeType="5"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/quantity_layout" android:background="@drawable/ecommerce_product_detail_item_background" android:layout_width="match_parent" android:layout_height="44dp" android:layout_marginLeft="16dp" android:layout_marginRight="16dp" app:layout_constraintTop_toBottomOf="@+id/top_container">
                <com.mobiroller.views.custom.MobirollerTextView android:id="@+id/quantity_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/e_commerce_product_detail_quantity" android:lineSpacingExtra="4.5sp" android:paddingStart="15dp" app:colorType="7" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0" app:sizeType="3"/>
                <com.mobiroller.views.custom.MobirollerImageView android:id="@+id/quantity_up" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="8dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0" app:layout_constraintTop_toTopOf="0" app:srcCompat="@drawable/ic_add_white_24dp" app:tintType="8"/>
                <com.mobiroller.views.custom.MobirollerTextView android:id="@+id/quantity_amount_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginEnd="15dp" app:colorType="7" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toStartOf="@+id/quantity_up" app:layout_constraintTop_toTopOf="0" app:sizeType="3"/>
                <com.mobiroller.views.custom.MobirollerImageView android:id="@+id/quantity_down" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginEnd="14dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toStartOf="@+id/quantity_amount_text" app:layout_constraintTop_toTopOf="0" app:srcCompat="@drawable/ic_baseline_remove_24" app:tintType="8"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/description_layout" android:background="@drawable/ecommerce_product_detail_description_item_background" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:layout_marginStart="16dp" android:layout_marginEnd="16dp" app:layout_constraintTop_toBottomOf="@+id/quantity_layout">
                <com.mobiroller.views.custom.MobirollerTextView android:gravity="center_vertical" android:id="@+id/description_text" android:layout_width="match_parent" android:layout_height="65dp" android:text="@string/e_commerce_product_detail_description" android:lineSpacingExtra="4.5sp" android:paddingStart="15dp" app:colorType="7" app:layout_constraintTop_toTopOf="0" app:sizeType="3"/>
                <com.mobiroller.views.custom.MobirollerImageView android:id="@+id/description_arrow_image_view" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginEnd="12dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0" app:layout_constraintTop_toTopOf="0" app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24" app:tintType="8"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <com.mobiroller.views.custom.MobirollerClickableLayout android:id="@+id/return_terms_layout" android:background="@drawable/ecommerce_product_detail_item_background" android:layout_width="match_parent" android:layout_height="44dp" android:layout_marginLeft="16dp" android:layout_marginTop="12dp" android:layout_marginRight="16dp" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/description_layout">
                <com.mobiroller.views.custom.MobirollerTextView android:id="@+id/return_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/e_commerce_product_detail_return_terms" android:lineSpacingExtra="6sp" android:paddingStart="15dp" app:colorType="7" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0" app:sizeType="3"/>
                <com.mobiroller.views.custom.MobirollerImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:tint="@color/black" android:layout_marginEnd="12dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0" app:layout_constraintTop_toTopOf="0" app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24" app:tintType="8"/>
            </com.mobiroller.views.custom.MobirollerClickableLayout>
            <com.mobiroller.views.custom.MobirollerClickableLayout android:id="@+id/shipping_terms_layout" android:background="@drawable/ecommerce_product_detail_item_background" android:layout_width="match_parent" android:layout_height="44dp" android:layout_marginLeft="16dp" android:layout_marginTop="12dp" android:layout_marginRight="16dp" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/return_terms_layout">
                <com.mobiroller.views.custom.MobirollerTextView android:id="@+id/shipping_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/e_commerce_product_detail_delivery_conditions" android:lineSpacingExtra="6sp" android:paddingStart="15dp" app:colorType="7" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0" app:sizeType="3"/>
                <com.mobiroller.views.custom.MobirollerImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:tint="@color/black" android:layout_marginEnd="12dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0" app:layout_constraintTop_toTopOf="0" app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24" app:tintType="8"/>
            </com.mobiroller.views.custom.MobirollerClickableLayout>
            <View android:layout_width="match_parent" android:layout_height="16.5dp" app:layout_constraintTop_toBottomOf="@+id/shipping_terms_layout"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <com.mobiroller.views.custom.MobirollerButton android:id="@+id/buy_button" android:background="@color/transparent" android:layout_width="match_parent" android:layout_height="55dp" android:lineSpacingExtra="1sp" app:layout_constraintBottom_toBottomOf="0" app:mButtonColorType="6" app:mButtonHasRadius="false" app:mButtonIcon="@drawable/ic_outline_shopping_cart_24" app:mButtonText="@string/e_commerce_product_detail_buy_now"/>
    <ImageView android:id="@+id/gradient_image_view" android:background="@drawable/in_app_purchase_detail_gradient" android:layout_width="match_parent" android:layout_height="150dp" app:layout_constraintTop_toTopOf="0"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0">
        <com.mobiroller.views.custom.MobirollerToolbar android:id="@+id/toolbar" android:layout_width="match_parent" android:layout_height="wrap_content" app:mToolbarIsTransparent="true" app:title=""/>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/constraintLayout" android:background="@color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="0dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toTopOf="0">
        <com.mobiroller.views.custom.MobirollerToolbar android:gravity="center" android:id="@+id/toolbar_webview" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="0" app:navigationIcon="@drawable/ic_close_white_24dp" app:title=""/>
        <com.mobiroller.views.VideoEnabledWebView android:id="@+id/web_view" android:layout_width="match_parent" android:layout_height="match_parent"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

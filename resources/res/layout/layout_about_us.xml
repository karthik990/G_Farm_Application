<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/main_layout" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/overlay_layout" android:layout_width="match_parent" android:layout_height="match_parent">
        <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout android:padding="16dp" android:layout_width="match_parent" android:layout_height="match_parent">
                <TextView android:textSize="@dimen/font_40" android:textStyle="bold" android:textColor="@color/black" android:gravity="center" android:id="@+id/header_text_view" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="" app:layout_constraintTop_toTopOf="0"/>
                <TextView android:textSize="@dimen/font_19" android:textColor="@color/black" android:id="@+id/about_text_view" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="" app:layout_constraintTop_toBottomOf="@+id/header_text_view"/>
                <TextView android:textSize="@dimen/font_32" android:textColor="@color/black" android:id="@+id/description_title_text_view" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="@string/note_description" app:layout_constraintTop_toBottomOf="@+id/about_text_view"/>
                <TextView android:textSize="@dimen/font_19" android:textColor="@color/black" android:id="@+id/description_text_view" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="" app:layout_constraintTop_toBottomOf="@+id/description_title_text_view"/>
                <GridLayout android:id="@+id/grid_layout" android:layout_width="match_parent" android:layout_height="140dp" android:layout_marginTop="18dp" android:rowCount="2" android:columnCount="5" app:layout_constraintTop_toBottomOf="@+id/description_text_view">
                    <ImageView android:id="@+id/twitter_image" android:padding="5dp" android:layout_width="70dp" android:layout_height="70dp" android:src="@drawable/twitter_about_us" app:layout_constraintDimensionRatio="1:1"/>
                    <ImageView android:id="@+id/facebook_image" android:padding="5dp" android:layout_width="70dp" android:layout_height="70dp" android:src="@drawable/facebook_about_us" app:layout_constraintDimensionRatio="1:1"/>
                    <ImageView android:id="@+id/linkedin_image" android:padding="5dp" android:layout_width="70dp" android:layout_height="70dp" android:src="@drawable/linkedin_about_us" app:layout_constraintDimensionRatio="1:1"/>
                    <ImageView android:id="@+id/web_image" android:padding="5dp" android:layout_width="70dp" android:layout_height="70dp" android:src="@drawable/web_about_us" app:layout_constraintDimensionRatio="1:1"/>
                    <ImageView android:id="@+id/google_image" android:padding="5dp" android:layout_width="70dp" android:layout_height="70dp" android:src="@drawable/googleplus_about_us" app:layout_constraintDimensionRatio="1:1"/>
                    <ImageView android:id="@+id/email_image" android:padding="5dp" android:layout_width="70dp" android:layout_height="70dp" android:src="@drawable/email_about_us" app:layout_constraintDimensionRatio="1:1"/>
                </GridLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>

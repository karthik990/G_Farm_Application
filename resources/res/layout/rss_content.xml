<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/rss_content_overlay" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.mobiroller.views.CustomHorizontalScrollView android:id="@+id/rss_content_scroll_view" android:background="#f2f1ef" android:layout_width="match_parent" android:layout_height="match_parent">

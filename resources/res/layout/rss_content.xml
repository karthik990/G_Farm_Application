                <ImageView android:id="@+id/rss_content_image" android:layout_width="match_parent" android:layout_height="240dp" android:src="@drawable/no_image" android:scaleType="centerCrop"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/rss_content_inner_layout" android:background="#90ffffff" android:paddingTop="11.3dp" android:paddingBottom="10dp" android:descendantFocusability="blocksDescendants" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/rss_image_layout" android:layout_marginStart="13.3dp" android:layout_marginEnd="13.3dp">
                <TextView android:textSize="?attr/font_173" android:textStyle="bold" android:textColor="@color/black" android:id="@+id/rss_content_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="9.3dp" android:paddingStart="12dp" android:paddingEnd="13.3dp"/>

            </LinearLayout>
            <Button android:textSize="?attr/font_15" android:textColor="#ffffff" android:id="@+id/rss_content_more_button" android:background="#6ebb67" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="15dp" android:minHeight="40dp" android:paddingStart="20dp" android:paddingEnd="20dp" style="@style/Widget.AppCompat.Button"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/ad_container" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </LinearLayout>
    </com.mobiroller.views.CustomHorizontalScrollView>
</RelativeLayout>
